{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "x_schema_version": 1,
  "type": "object",
  "additionalProperties": false,
  "required": ["answer_md", "confidence", "sources"],
  "properties": {
    "answer_md": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "sources": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url", "title"],
        "properties": {
          "url": { "type": "string" },
          "title": { "type": "string" },
          "published_at": { "type": "string" },
          "snippet": { "type": "string" }
        }
      }
    },
    "notes": { "type": "string" }
  }
}
